import java.util.*;
class PT6
{
 public static void main(String[] args) 
 {
  Scanner scanner=new Scanner(System.in);
  Shapes shape=new Shapes();
  System.out.println("Enter side of Sqaure");
  int size=scanner.nextInt();
  shape.sqaure(size);
  System.out.println("Enter the length and breath of Rectangle");
  int a=scanner.nextInt();
  int b=scanner.nextInt();
  shape.Rectangle(a,b);
  System.out.println("Enter the raidus of Cricle");
  int r=scanner.nextInt();
  shape.Cricle(r); 
  }
}
// Question 3
class Shapes
{
  public void sqaure(int size)
  {
    System.out.println("Area of Sqaure = " + size*size);
    System.out.println("Perimeter of Sqaure = " + 4*size);
  }
  public void Rectangle(int a,int b)
  {
   System.out.println("Area of Rectangle = " + a*b);
   System.out.println("Perimeter of Rectangle = " + 2*(a+b));
  }
  public void Cricle(int r)
  {
    System.out.println("Area of Cricle = " + 3.14*r*r);
    System.out.println("Perimeter of Cricle = " +2*3.14*r);
  }
}
